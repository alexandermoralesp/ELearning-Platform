<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <item>
        <shape>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="78dp"
            android:layout_height="75dp"
            app:srcCompat="@android:drawable/ic_menu_save"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/decription_class_id"
            android:layout_width="268dp"
            android:layout_height="43dp"
            android:text="@string/default_description"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="28dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/title_class_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_class_name"
            tools:layout_editor_absoluteX="78dp"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/button"
            android:layout_width="61dp"
            android:layout_height="28dp"
            android:text="Ver mas"
            android:textSize="4sp"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="344dp"
            tools:layout_editor_absoluteY="54dp" />
        </shape>
    </item>

</selector>