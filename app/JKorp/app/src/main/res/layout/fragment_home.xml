<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        >
    <LinearLayout
        android:id="@+id/layout_cursos_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/default_size"
        android:layout_marginRight="@dimen/default_size"
        tools:context=".MainActivity"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="8dp"
            android:paddingTop="@dimen/top_padding"
            android:text="Mis Cursos"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/name_of_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Name of Course" />

        <EditText
            android:id="@+id/description_of_course_in"
            android:layout_width="351dp"
            android:layout_height="63dp"

            android:hint="Description" />

        <Button
            android:id="@+id/crear_curso_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Crear curso"
            android:textSize="13sp"
            android:textColor="@color/white"
            />



    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>